%tr
  %td= link_to image_tag(movie.thumbnail_url), movie_path(movie)
  %td
    = link_to movie.title, movie_path(movie)
    = link_to content_tag(:i, '', class: 'icon-globe'), movie.rotten_tomatoes_url, target: '_blank'
  %td= movie.year
  %td= movie.runtime
  %td= movie.user.name
  %td.score= movie.plusminus_tally
  %td
    %a.btn.vote.up{'data-id' => movie.id, class: current_user.voted_for?(movie) ? 'active' : ''}
      %i.icon-thumbs-up
    %a.btn.vote.down{'data-id' => movie.id, class: current_user.voted_against?(movie) ? 'active' : ''}
      %i.icon-thumbs-down
